<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/themes_dark</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>


    </style>

    <style name="setting_menu">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FDFDFD</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:gravity">left</item>

    </style>


    <style name="image">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/themes_dark</item>

    </style>

    <style name="image_arrow_back"> parent="image">

        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="tint">@color/white</item>
        <item name="android:background">@color/themes_dark</item>

    </style>

    <style name="edit_text">

        <item name="android:textColor">@color/themes_dark</item>
        <item name="drawableTint">@color/themes_dark</item>
        <item name="android:textColorHint">@color/themes_dark</item>
        <item name="android:color">@color/white</item>


    </style>

    <style name="ic_clear_style">

        <item name="tint">@color/themes_dark</item>
        <item name="backgroundTint">@color/edit</item>

    </style>

    <style name="playlist1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/themes_dark</item>
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="playlist2" parent="playlist1">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="playlist3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/themes_dark</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="playlist4">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="noSearchImage">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/searchdarkmode</item>

    </style>

    <style name="noSearchText">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/nothing_found</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="noConnectImage">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/internetdarkmode</item>

    </style>

    <style name="noConnectText">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:text">@string/something_went_wrong</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="main">

        <item name="android:background">@color/themes_dark</item>

    </style>

    <style name="textHistory">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_19</item>
    </style>


    <style name="buttonHistory">
        <item name="android:textColor">@color/themes_dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="image_arrow_back1">

        <item name="android:layout_margin">@dimen/size_dp_15</item>
        <item name="android:layout_gravity">right</item>
        <item name="tint">@color/white</item>
        <item name="android:background">@color/themes_dark</item>

    </style>

    <style name="add_like">


        <item name="android:background">@color/white</item>
        <item name="tint">@color/grey</item>

    </style>

</resources>
