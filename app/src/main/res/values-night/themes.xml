<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themes_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="refreshButtonBackground">@drawable/refresh_button_light</item>
        <!-- Status bar color. -->
        <item name="statusBarColor">@color/themes_dark</item>
        <item name="searchBackgroundTint">@color/white</item>
        <item name="clear_history">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="blackWhiteColor">@color/white</item>
        <item name="whiteBlackColor">@color/themes_dark</item>
        <item name="greyBlackColor">@color/themes_dark</item>
        <item name="greyWhiteColor">@color/white</item>
        <item name="blackGreyColor">@color/themes_dark</item>

    </style>
</resources>