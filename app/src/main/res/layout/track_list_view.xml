<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/settings">

    <ImageView
        style="@style/cover"
        android:id="@+id/cover_icon"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_12"
        android:src="@drawable/placeholder"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/settings"
        >

        <TextView
            android:id="@+id/track_name"
            style="@style/playlist2"
            android:lines="1"
            android:maxEms="15"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/ys_display_regular"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/margin_12"
            tools:text="Smells Like Teen Spirit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/settings">

            <TextView
                android:id="@+id/artist_name"
                style="@style/playlist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:drawablePadding="@dimen/margin_12"
                android:lines="1"
                android:maxEms="15"
                android:ellipsize="end"
                app:drawableEndCompat="@drawable/ellipse"
                tools:text="Nirvana" />

            <TextView
                android:id="@+id/track_time"
                style="@style/playlist1"
                tools:text="@string/excerpt_duration" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/settings">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="19dp"
            android:layout_marginRight="@dimen/margin_12"
            app:srcCompat="@drawable/ic_arrow_forward"
            app:tint="@color/grey" />
    </FrameLayout>

</LinearLayout>