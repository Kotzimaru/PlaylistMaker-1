<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/whiteBlackColor"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14">

        <ImageView
            android:id="@+id/return_button"
            android:layout_width="@dimen/margin_16"
            android:layout_height="@dimen/margin_16"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:paddingStart="4dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/blackWhiteColor" />

        <TextView
            style="@style/SettingsText"
            android:layout_marginStart="52dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/mediateka"
            android:textColor="?attr/blackWhiteColor"
                android:textSize="@dimen/text_size_22" />
    </FrameLayout>
    <!-- сюда полоску с навигацией по фрагментам -->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?attr/whiteBlackColor"
        android:textAllCaps="false"
        app:tabIndicatorColor="?attr/colorOnSecondary"
        app:tabTextAppearance="@style/TabLayoutTextAppearance"
        app:tabTextColor="?attr/blackWhiteColor" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />


</LinearLayout>