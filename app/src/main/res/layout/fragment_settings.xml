<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/general_background_color"
    android:orientation="vertical"
    tools:context=".settings.ui.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/navigation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_25">

        <TextView
            style="@style/YSMedium22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textColor="?attr/toolbar_text_color" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        style="@style/YSRegular16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:layout_gravity="start"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/margin_16"
        android:paddingEnd="@dimen/margin_25"
        android:text="@string/dark_theme" />

    <FrameLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/margin_16">

        <TextView
            style="@style/YSRegular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/share" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/margin_12"
            android:contentDescription="@string/share"
            android:src="@drawable/ic_share"
            tools:ignore="ImageContrastCheck" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/margin_16">

        <TextView
            style="@style/YSRegular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/support" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/margin_12"
            android:contentDescription="@string/support"
            android:src="@drawable/ic_support"
            tools:ignore="ImageContrastCheck" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/offer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:layout_marginBottom="@dimen/margin_42"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/margin_16">

        <TextView
            style="@style/YSRegular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/agreement" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="18dp"
            android:contentDescription="@string/ic_arrow_forward"
            android:src="@drawable/ic_arrow_forward"
            tools:ignore="ImageContrastCheck" />
    </FrameLayout>
</LinearLayout>