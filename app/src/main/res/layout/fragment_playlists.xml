<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/problems_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/create_button"
            android:layout_marginTop="24dp"
            style="@style/search_activity_refresh_button"
            android:text="@string/new_playlist"
            android:visibility="visible" />

        <ImageView
            style="@style/noSearchImage"
            android:id="@+id/problems_image"
            android:layout_width="120dp"
            android:layout_marginTop="46dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/search_placeholder_text"
            android:fontFamily="@font/ys_display_medium"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_playlists"
            android:textSize="@dimen/text_size_19"
            android:textColor="?attr/blackWhiteColor"
            android:gravity="center"/>
    </LinearLayout>


</FrameLayout>