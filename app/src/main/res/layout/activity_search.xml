<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/settings"
    android:orientation="vertical">


    <LinearLayout
        style="@style/settings"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/arrow_back"
            style="@style/image_arrow_back"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back">
        </ImageView>

        <TextView
            style="@style/search_text"
            android:text="@string/search">

        </TextView>

    </LinearLayout>

    <FrameLayout

        style="@style/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_8"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/inputEditText"
            style="@style/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_4"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/edit"
            android:drawableStart="@drawable/ic_search_edit"
            android:drawablePadding="@dimen/size_dp_15"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/margin_20"
            android:paddingEnd="@dimen/margin_8"
            android:singleLine="true"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            style="@style/ic_clear_style"
            android:id="@+id/clearIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            tools:visibility="invisible" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textHistory"
            style="@style/textHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="8dp"
            android:text="@string/storySearch"
            android:textSize="@dimen/text_size_19"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.401" />

        <Button
            android:id="@+id/clearHistory"
            style="@style/buttonHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_8"
            android:text="@string/clearHistory"
            android:visibility="invisible"
            app:cornerRadius="@dimen/radius_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:id="@+id/noSearchError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_20"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            style="@style/noSearchImage"/>
        <TextView
            style="@style/noSearchText"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/noConnectError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_20"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            style="@style/noConnectImage" />

        <TextView
            android:gravity="center"
            style="@style/noConnectText"/>

        <ImageView
            android:id="@+id/refreshButton"
            android:layout_marginTop="@dimen/margin_8"
            android:src="?attr/refreshButtonBackground"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />


    </LinearLayout>







</LinearLayout>