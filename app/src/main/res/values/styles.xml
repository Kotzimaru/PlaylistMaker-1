<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/themes_dark</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>


    </style>

    <style name="setting_menu">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/themes_dark</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:gravity">left</item>

    </style>


    <style name="setting_text" parent="setting_menu">

        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/ys_text_medium</item>

    </style>

    <style name="search_text" parent="setting_menu">

        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/ys_text_medium</item>

    </style>

    <style name="image">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFEFE</item>

    </style>

    <style name="image_arrow_back" parent="image">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="tint">@color/themes_dark</item>
        <item name="android:background">#FFFEFE</item>

    </style>


    <style name="edit_text">

        <item name="android:textColor">@color/themes_dark</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:color">@color/grey</item>

    </style>


    <style name="ic_clear_style">

        <item name="tint">@color/grey</item>
        <item name="backgroundTint">@color/edit</item>


    </style>

    <style name="playlist1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/themes_dark</item>
        <item name="android:background">#AEAFB4</item>
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>


    <style name="playlist4">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="cover">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>

    </style>

    <style name="noSearchImage">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/searchlightmode</item>

    </style>

    <style name="noSearchText">

        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/nothing_found</item>
        <item name="android:textColor">@color/themes_dark</item>

    </style>


    <style name="noConnectImage">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/internetlightmode</item>

    </style>

    <style name="noConnectText">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:text">@string/something_went_wrong</item>
        <item name="android:textColor">@color/themes_dark</item>

    </style>



    <style name="main">

        <item name="android:background">@color/blue</item>

    </style>

    <style name="textHistory">
        <item name="android:textColor">@color/themes_dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_19</item>
    </style>


    <style name="buttonHistory">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="image_arrow_back1">

        <item name="android:layout_margin">@dimen/size_dp_15</item>
        <item name="android:layout_gravity">right</item>
        <item name="tint">@color/white</item>
        <item name="android:background">@color/themes_dark</item>

    </style>


    <style name="add_like">

        <item name="android:background">#FFFEFE</item>

    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
        <item name="android:layout_marginBottom">@dimen/margin_20</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="tint">?attr/color</item>
    </style>

    <style name="search_activity_refresh_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/whiteBlackColor</item>
        <item name="backgroundTint">?attr/blackWhiteColor</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>